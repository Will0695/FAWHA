<!-- res/layout/activity_usuario.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".Usuario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hola ADMINISTRADOR!"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="81dp" />

    <ImageView
        android:id="@+id/imageViewPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pa"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <!-- Agregar margen inferior al botón -->

    <!-- Agregar un Space entre el botón y las imágenes -->
    <Button
        android:id="@+id/nuevoBoton"
        android:layout_width="253dp"
        android:layout_height="96dp"
        android:layout_marginBottom="16dp"
        android:onClick="onNuevoBotonClick"
        android:text="Nueva Solicitud"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="81dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBuscar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/buscar" />

        <ImageView
            android:id="@+id/imageViewModificar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/agregar" />

    </LinearLayout>

</LinearLayout>

